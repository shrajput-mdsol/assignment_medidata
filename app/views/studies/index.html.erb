<div id="header" style="clear:both">
  <h2 style="float: left">Study Management</h2>
  <h2 style=" float: right; margin-left: 15px"> <%= link_to '+Add', new_study_path, class: "new-study" %></h2>
</div>

<div id="table_body">
  <div id=table>
    <table>
      <tr>
        <th> Title</th>
        <th> Therapeutic Area</th>
        <th> Phase</th>
        <th> Status</th>
        <th> Start End</th>
        <th> Projected End Date</th>
        <th> Edit </th>
        <th> Delete </th>
      </tr>
      <% @studies.each do |study| %>
        <%= render partial: 'study_row', locals: { study: study } %>
      <% end %>
    </table>
  </div>
  <h5><%=link_to 'Go Back', root_path%></h5>
</div>